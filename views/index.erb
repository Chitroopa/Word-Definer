
<div class="row">
  <div class="col-md-6"><h1>Words list</h1></div>
  <div class="col-md-4">
    <form action="/word-search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for..." name="search">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Go!</button>
        </span>
      </div>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Click on word to know its defintion:</h3>
    <ul>
      <% @words.each() do |word| %>
        <li><a href="/word/<%= word.id() %>"><%= word.word() %></li>
      <% end %>
    </ul>

    <form action="/word/new">
    <button type="submit" class="btn btn-info">Add word</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/words/alphabetical">
      <button type="submit" class="btn btn-primary btn-lg">Sort words (A-Z)</button>
    </form>
    <form action="/words-sample">
      <button type="submit" class="btn btn-success btn-lg">See sample word</button>
    </form>
    <form action="/words/all-words-definition">
      <button type="submit" class="btn btn-warning btn-lg">See all words with definition</button>
    </form>
  </div>
</div>
